<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp">

        <ImageView
            android:id="@+id/previewImgview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/review"
            style="@style/mountainInfoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/item_review_bg"
            android:ellipsize="end"
            android:lineSpacingExtra="4sp"
            android:maxWidth="260dp"
            android:maxLines="3"
            android:padding="8dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/previewImgview"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="adsfasdfasdfasfdasdfasfadsfasdfadasdfsafdasdfdsafasdfadsf" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>